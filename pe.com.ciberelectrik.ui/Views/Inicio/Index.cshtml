@{
    ViewBag.Title = "Ingreso al Sistema";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!-- Estilo personalizado para login -->
<style>
    body {
        background: linear-gradient(135deg, #f0f8ff, #e6f0ff, #f9f9ff);
        background-attachment: fixed;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        width: 100%;
        max-width: 450px;
        background-color: #ffffffcc;
        backdrop-filter: blur(12px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        border-radius: 16px;
        padding: 30px;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-primary {
        width: 100%;
    }

    h1 {
        font-size: 1.8rem;
        text-align: center;
        margin-bottom: 1rem;
        color: #0d6efd;
    }

    .alert {
        max-width: 450px;
        margin: 20px auto 0;
    }

    /* Detecta el link de Somee y lo reposiciona */
    a[href*="somee.com"] {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        text-align: center;
        z-index: 9999;
        padding: 5px;
        font-size: 12px;
        background-color: #f9f9f9;
    }

</style>

<!-- Tarjeta de login centrada -->
<div class="login-card">
    <h1>Ingreso al Sistema</h1>
    <form class="needs-validation" novalidate method="post" action="@Url.Action("Index", "Inicio")">
        <div class="mb-3">
            <label for="txtUsu" class="form-label">Usuario:</label>
            <input type="text" class="form-control w-100" id="txtUsu" name="usuario" placeholder="User: admin" required>
            <div class="invalid-feedback">Se requiere ingresar un usuario</div>
        </div>

        <div class="mb-3">
            <label for="txtCla" class="form-label">Clave:</label>
            <input type="password" class="form-control w-100" id="txtCla" name="clave" placeholder="Password: admin" required>
            <div class="invalid-feedback">Se requiere ingresar una clave</div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Ingresar</button>
    </form>
</div>

<!-- Alerta si hay error -->
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <p>@ViewBag.ErrorMessage</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Validación Bootstrap -->
<script>
    (() => {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
