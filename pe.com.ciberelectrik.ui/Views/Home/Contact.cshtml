@{
    ViewBag.Title = "Contáctanos";
}

<main class="container mt-5" aria-labelledby="title">

    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary" id="title">Contáctanos</h2>
        <p class="lead text-muted">Estamos aquí para ayudarte. Comunícate con nuestro equipo de soporte o ventas.</p>
    </div>

    <div class="row justify-content-center mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow p-3 mb-5 bg-body rounded">
                <div class="card-body">
                    <h4 class="card-title text-dark mb-3">
                        <i class="bi bi-geo-alt-fill text-danger me-2"></i>Dirección
                    </h4>
                    <p class="card-text">Av. Innovación Tecnológica 123<br /> Lima, Perú</p>

                    <h4 class="card-title text-dark mt-4 mb-3">
                        <i class="bi bi-telephone-fill text-primary me-2"></i>Teléfono
                    </h4>
                    <p class="card-text">+51 1 555-0123</p>

                    <h4 class="card-title text-dark mt-4 mb-3">
                        <i class="bi bi-envelope-fill text-success me-2"></i>Correos Electrónicos
                    </h4>
                    <p class="card-text">
                        <strong>Soporte:</strong> <a href="mailto:soporte@ciberelectrik.com">soporte@ciberelectrik.com</a><br />
                        <strong>Ventas:</strong> <a href="mailto:ventas@ciberelectrik.com">ventas@ciberelectrik.com</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center text-muted small mt-4">
        <p>&copy; @DateTime.Now.Year CiberElectrik. Todos los derechos reservados.</p>
    </div>

</main>
